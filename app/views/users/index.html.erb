<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'books/list' %>
      <%= render 'books/newbook', book_new: @book_new %>
    </div>

    <div class="col-8 offset-1">
      <h2>User</h2>
      <table class="table">
        <thead>
          <th>image</th>
          <th>name</th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
