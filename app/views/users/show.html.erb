<div class="container">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <%= image_tag @user.get_profile_image(100, 100) %>
        </li>
        <li class="list-group-item">
          <b>name <%= @user.name %></b>
        </li>
        <li class="list-group-item">
          <b>introduction <%= @user.introduction %></b>
        </li>
      </ul>
      <% if @user == current_user %>
        <%= link_to "useredit", edit_user_path(@user.id) %>
      <% else %>
        <%= link_to "myuserBooks", user_path(current_user.id) %>
      <% end %>

      <h2>New book</h2>
      <%= form_with model: @book_new, url: '/books', method: :post do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %><br>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="col-8 offset-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag book.user.get_profile_image(100, 100) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
