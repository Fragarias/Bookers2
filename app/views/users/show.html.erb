<h1>User info</h1>
<ul class="list-group list-group-flush">
  <li class="list-group-item">
    <%= image_tag @user.get_profile_image(100, 100) %>
  </li>
  <li class="list-group-item">
    <b>name </b>
  </li>
  <li class="list-group-item">
    <b>introduction </b>
  </li>
</ul>


<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>

