<h1>User info</h1>

<%= form_with model: @user do |f| %>
  <p>Name</p>
  <%= f.text_field :name, autofocus: true, placeholder:"名前" %>
  <p>Image</p>
  <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept:"image/*" %>
  <p>introduction</p>
  <%= f.text_area :introduction %>
  <%= f.submit "Update User" %>
<% end %>