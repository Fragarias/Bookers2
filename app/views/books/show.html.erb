<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'detail', user: @user %>
      <%= render 'newbook', book_new: @book_new %>
    </div>

    <div class="col-8 offset-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(100, 100) %>
              <% end %>
              <%= link_to user_path(@book.user_id) do %>
                <p><%= @book.user.name %></p>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <p><%= @book.title %></p>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm" %></td>
            <% end %>
          <tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
