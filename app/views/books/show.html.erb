<h1>User info</h1>
<ul class="list-group list-group-flush">
  <li class="list-group-item">
    <!--%= image_tag @user.get_profile_image(100, 100) %>-->
  </li>
  <li class="list-group-item">
    <b>name <%= @book.user.name %></b>
  </li>
  <li class="list-group-item">
    <b>introduction <%= @book.user.introduction %></b>
  </li>
</ul>


<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>

<h1>Book detail</h1>
<div>
  <p>投稿ユーザー画像:</p>
  <p><%= @book.user.name %></p>

  <p>Title:<%= @book.title %></p>
  <p>Opinion:<%= @book.body %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm" %>
    <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm" %>
  <% end %>
</div>
