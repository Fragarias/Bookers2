<h1>New book</h1>
<%= form_with model: @book_new, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
      <p>投稿ユーザー画像:</p>
    <% end %>
    <%= link_to book_path(book.id) do %>
      <p>Title:<%= book.title %></p>
    <% end %>
    <p>Opinion:<%= book.body %></p>
  </div>
<% end %>
